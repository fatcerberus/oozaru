{
    "compileOnSave" : true,

    "compilerOptions": {
        "target": "es2017",
        "lib": [ "es2017", "dom" ],
        "module": "es6",

        "outDir": "web/engine",

        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "useDefineForClassFields": true
    },

    "exclude": [
        "game/*",
    ]
}
